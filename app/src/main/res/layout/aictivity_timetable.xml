<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--logobar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="#0D47A1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sangmyung_logo_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:background="@drawable/logo_img" />

        <ImageView
            android:id="@+id/sangmyung_logo_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/logo_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:text="dormitory"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>

    <!--timetable add content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addtimetable"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:lineHeight="20dp"
            android:orientation="vertical"
            android:text="시간표가 없습니다. &#10; 플러스 버튼을 통해 시간표를 추가해주세요"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
        <!--listView-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ListView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
