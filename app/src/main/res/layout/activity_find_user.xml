<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#0D47A1"
        android:layout_weight="10">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/logo_img"
            android:id = "@+id/sangmyung_logo_img"
            android:layout_margin="12dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/logo_text"
            android:id = "@+id/sangmyung_logo_text"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text = "dormitory"
            android:textSize = "20dp"
            android:gravity="bottom"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop ="30dp"
            android:background="@drawable/find_edittext"
            android:hint = "검색"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:id="@+id/userSearchEditText">
        </EditText>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id = "@+id/find_user_listview">
        </ListView>


    </LinearLayout>

</LinearLayout>